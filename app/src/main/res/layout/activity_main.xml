<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/sysUpTime"
                android:background="#1f000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sysUpTime"
                android:textSize="25sp"
                android:onClick="displayDetail"
                android:clickable="true"
                />

            <TextView
                android:id="@+id/sysContact"
                android:background="#d74424"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sysContact"
                android:textSize="25sp"
                android:onClick="displayDetail"
                android:clickable="true"
                />

            <TextView
                android:id="@+id/ipForwarding"
                android:background="#1f000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ipForwarding"
                android:textSize="25sp"
                android:onClick="displayDetail"
                android:clickable="true"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serwer IP"
                android:textSize="25sp"
                android:layout_gravity="center"
            />

            <EditText
                android:id="@+id/serwerIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="serwer IP"
                android:inputType="number"
                android:digits="0123456789."
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serwer port"
                android:textSize="25sp"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/serwerPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Serwer port"
                android:inputType="number"
                android:layout_gravity="center"

                />

            <Button
                android:id="@+id/connectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:layout_gravity="center"

                />
        </LinearLayout>


    </ViewFlipper>


</LinearLayout>

